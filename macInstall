#!/bin/bash
read -p "input install path(without the last '/')[/usr/local/bin/gg]:" inputStr
installPath=/usr/local/bin/gg
if [[ -n "$inputStr" ]]; then
	installPath=$inputStr/gg
fi

sed -i '' "s#installPath=.*#installPath=$installPath#g" gg-*
rm -r $installPath 2> /dev/null
mkdir -p $installPath 2> /dev/null
cp gg-* $installPath
if [[ $? != 0 ]]; then
	printf "\n\ncan not copy file to install path, check your permission"
	exit 1
fi

printf "\n\ninstall done!\nyou should read the README.md carefully is case of big changes in the usage of the scripts\nPlease add \n\t\$PATH=\$PATH:$installPath\nin your env config\n"
