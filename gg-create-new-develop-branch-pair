installPath=/usr/local/bin
source $installPath/gg-functions

if [ "$#" != "1" ]; then
	printf "Please input the dev code\n"
	exit 1
fi

get_currentBranch
get_currentBranchType
if [ $currentBranchType != 'develop' ] && [ $currentBranchType != 'master' ]; then
	printf "\nYou must be in the develop branch to create a new develop branch!\n\n"
	git status
	exit 1
fi

printf "Do you what to open a new develop branch like this?\n"
printf "\tgit checkout -b $1%develop $currentBranch\n"
printf "\tgit checkout -b $1%master $currentBranch\n"

read temp
git checkout -b $1%develop $currentBranch
git checkout -b $1%master $currentBranch
