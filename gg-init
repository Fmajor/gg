installPath=/usr/local/bin/gg

isGitRepo=`ls .git`
if [[ -z $isGitRepo ]];then
	printf 'Do you what to git init the directory like this?\n'
	printf '\tgit init\n'
	printf '\tgit commit --allow-empty -m "Init commit as gg repertory"\n'
	printf '\tgit checkout -b develop\n'
	echo "press ENTER to continue, press Ctrl+C to ESCAPE"
	read temp
	git init
	git commit --allow-empty -m "Init commit as gg repertory"
	git checkout -b develop
else
	printf 'Do you what to git init the directory like this?\n'
	printf '\tgit commit --allow-empty -m "Init commit as gg repertory"\n'
	printf '\tgit checkout -b develop\n'
	echo "press ENTER to continue, press Ctrl+C to ESCAPE"
	read temp
	testClear
	git checkout -a master
	git commit --allow-empty -m "Init commit as gg repertory"
	git checkout -b develop
fi
cp $installPath/gg-pre-commit .git/hooks/pre-commit
